@{
    ViewBag.Title = "Home Page";
}

<br />

@for (int i = 0; i < ViewBag.Weather.Count; i++)
{
    <div style="font-weight:bold">@ViewBag.WeatherTime[i]</div>

    <table>
        <tr>
            <td><img src="@ViewBag.WeatherImg[i]" /></td>
            <td style="padding-left:2em">@ViewBag.Weather[i]</td>
        </tr>
    </table>

    <br />
}
